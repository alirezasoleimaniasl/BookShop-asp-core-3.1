<div id="modal-placeholder">

</div>
<p>
    @*<a asp-action="Create" class="btn btn-primary btn-icon">افزودن نویسنده جدید</a>*@
    <button class="btn btn-info btn-icon" data-toggle="ajax-modal" data-url="@Url.Action("Create")">
        <i class="fa fa-plus text-white"></i>افزودن نویسنده جدید
    </button>
</p>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-light">
                نویسندگان
            </div>
            <div class="card-body">
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>
                                @Html.SortableHeaderFor(model => model.FirstName, "FirstName")
                            </th>
                            <th>
                                @Html.SortableHeaderFor(model => model.LastName,"LastName")
                            </th>
                            <th>
                                کتاب های نویسنده
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    <a asp-action="AuthorBook" asp-route-id="@item.AuthorID" class="btn btn-info">مشاهده کتاب ها</a>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.AuthorID" class="btn btn-success btn-icon">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.AuthorID" class="btn btn-info btn-icon">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.AuthorID" class="btn btn-danger btn-icon">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

